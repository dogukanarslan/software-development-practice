<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', {title: 'Your pins'}) %>
  <body>
    <%- include('partials/navbar') %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2 bg-light sidebar">
          <%- include('partials/sidebar', {pathname}) %>
        </div>
        <div class="col-md-10 ms-auto">
          <h4>Your Pins</h4>
          <%- include('partials/searchForm', {url: '/pins'}) %>
          <% if (pins.length > 0) { %> <%- include('partials/table',
          {data:{header: ['Title', 'Description', 'Creator', 'Total Likes',
          'Total Dislikes', 'Link'], body: pins}}); %> <% } else { %>
          <p>
            You don't have any pin yet.
            <a href="/pins/create">Create a new pin</a>
          </p>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('partials/footer'); %>
    <script>
      feather.replace();
    </script>
  </body>
</html>
