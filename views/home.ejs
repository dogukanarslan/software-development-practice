<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', {title: 'Home'}); %>
  <body>
    <%- include('partials/navbar'); %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2 bg-light sidebar">
          <%- include('partials/sidebar', {pathname}) %>
        </div>
        <div class="col-md-10 ms-auto">
          <h4>All Pins</h4>
          <%- include('partials/searchForm', {url: '/'}) %>

          <div class="btn-group my-4">
            <form action="/" method="GET">
              <div class="btn-group">
                </button>
                <button name="type" value="all" class="btn btn-outline-secondary <%= type === 'all' ? 'active' : '' %>">
                  <div class="d-flex align-items-center">
                    All
                  </div>
                </button>
                <button name="type" value="following"
                  class="btn btn-outline-secondary <%= type === 'following' ? 'active' : '' %>">
                  Following
              </div>
            </form>
          </div>

          <%- include('partials/table', {
            columns: [
              {heading: 'Title', value: 'title'},
              {heading: 'Description', value: 'description'},
              {heading: 'Creator', value: 'creator'},
              {heading: 'Total Likes', value: 'total_likes'},
              {heading: 'Total Dislikes', value: 'total_dislikes'},
              {heading: 'Total Saves', value: 'total_saves'},
              {heading: 'Created At', value: 'created_at'},
              {heading: 'Link', url: '/pins'}
            ],
            data: pins.map(pin => ({
                title: pin.title,
                description: pin.description,
                creator: pin.creator,
                total_likes: pin.liked_by.length,
                total_dislikes: pin.disliked_by.length,
                total_saves: pin.saved_by.length,
                created_at: new Intl.DateTimeFormat('en', { year: 'numeric',month: 'long',day: 'numeric',}).format(pin.created_at),
                link: pin._id
                }))
              }); %>
        </div>
      </div>
    </div>
    <%- include('partials/footer'); %>
  </body>
  <script>
    feather.replace();
  </script>
</html>
